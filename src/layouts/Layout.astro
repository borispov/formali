<style is:global>

	:root {
		 --tw-shadow; 0 0 #000;
	 }

	.drop-shadow-plain {
			 filter: drop-shadow(3px 3px 0 #000);
	}

	.drop-shadow-3xl {
			 filter: drop-shadow(3px 3px 0 #000);
	}

	.drop-shadow-4xl {
			 filter: drop-shadow(4px 4px 0 #000);
	}

  .snap {
    scroll-snap-type: var(--scroll-snap-direction) var(--scroll-snap-constraint);
  }
  .snap-y {
    --scroll-snap-direction: y;
  }
  .snap-mandatory {
    --scroll-snap-constraint: mandatory;
  }
  .snap-start {
    scroll-snap-align: start;
  }

			 .button-xl {
				 border-radius: .25em;
				 cursor: pointer;
				 font-size: 1.125rem;
				 font-weight: 700;
				 line-height: 1.75rem;
				 position: relative;
				 text-align: center;
				 white-space: nowrap;
				 transition: all .05s ease-in;
			 }
			 .button-xl:hover {
				--tw-shadow: 1px 1px 0 #002f3c;
			 }

			 .button-xl:hover, .button-primary:hover {
				 box-shadow: 0 0 0 -1px #fff, 0 0 0 #fff;
				 transform: translate(3px, 3px);
			 }

			 .button-primary {
					--tw-border-opacity: 1;
				 background: rgba(255, 255, 255, 1);
					 border-width: 2px;
				 border-color: rgb(25, 26, 27);
				 color: rgb(25, 25, 27);
				 box-shadow: 3px 3px 0 #fff, 3px 3px 0 #fff;
			 }
			 .button-secondary {
			 --tw-secondary: rgb(1, 215, 176);
				 background: var(--tw-secondary);
				 border-width: 2px;
				 border-color: rgb(25, 26, 27);
				 color: rgb(25, 25, 27);
				 box-shadow: 3px 3px 0 var(--tw-secondary), 3px 3px 0 var(--tw-secondary);
			 }


.button {
    --tw-bg-opacity: 1;
    --tw-text-opacity: 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    --tw-shadow: 3px 3px 0 #002f3c;
    --tw-shadow-colored: 3px 3px 0 var(--tw-shadow-color);
	 background-color: rgb(250, 247, 125);
    border-radius: .25rem;
    border-width: 2px;
    color: rgb(25 26 27);
    cursor: pointer;
    display: inline-block;
    font-size: .875rem;
    font-weight: 700;
    line-height: 1.25rem;
    padding: .25rem 1rem;
    position: relative;
    text-align: center;
    -webkit-text-decoration-line: none;
    text-decoration-line: none;
    transition-duration: .15s;
    transition-timing-function: cubic-bezier(.4,0,.2,1);
    transition: all .05s ease-in!important;
    white-space: nowrap
}

.button,.button:hover {
			 box-shadow: var(--tw-ring-offset-shadow,0 0 #0000),var(--tw-ring-shadow,0 0 #0000),var(--tw-shadow);
}

.button:hover {
    --tw-shadow: 1px 1px 0 #002f3c;
    --tw-shadow-colored: 1px 1px 0 var(--tw-shadow-color);
    transform: translate(2px,2px)
}

.button:active,.button:focus {
    outline: 2px solid transparent;
    outline-offset: 2px
}

.button:active {
    --tw-shadow: 0 0 #0000;
    --tw-shadow-colored: 0 0 #0000;
    box-shadow: var(--tw-ring-offset-shadow,0 0 #0000),var(--tw-ring-shadow,0 0 #0000),var(--tw-shadow);
    left: 1px;
    top: 1px
}

.button.on-black {
    --tw-border-opacity: 1;
    --tw-bg-opacity: 1;
    --tw-text-opacity: 1;
    background-color: rgb(25 26 27/var(--tw-bg-opacity));
    border-color: rgb(255 255 255/var(--tw-border-opacity));
    border-width: 1px;
    box-shadow: 3px 3px 0 -1px #191a1b,3px 3px 0 #fff;
    color: rgb(255 255 255/var(--tw-text-opacity))
}

.button.button-primary {
    --tw-border-opacity: 1;
    --tw-bg-opacity: 1;
    --tw-text-opacity: 1;
		 background-color: rgb(255,255,255);
		 border-color: rgb(25,26,27);
    border-width: 2px;
	 box-shadow: 3px 3px 0 -1px #fff, 3px 3px 0 #fff;
	 color: rgb(25,26,27);
}

.button.button-primary:hover {
    box-shadow: 0 0 0 -1px #fff,0 0 0 #fff;
    transform: translate(3px,3px)
}

.to-purple-new {
	--tw-gradient-to: #af00ff !important;
}

.from-pink-hot {
	--tw-gradient-from: #ff269e !important;
}

  .bg-gradient-to-r {
    background-image: linear-gradient(to left, var(--tw-gradient-from), var(--tw-gradient-to));
  }
</style>

<style>
	.logo {
		width: 186px;
	}

</style>
